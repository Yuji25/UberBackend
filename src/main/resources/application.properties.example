# Spring Application Configuration Template
# Copy this file and rename it to 'application.properties'
# Then replace all placeholder values with your actual configuration

# ===================================
# Application Name
# ===================================
spring.application.name=UberBackend

# ===================================
# Server Configuration
# ===================================
server.port=8081

# ===================================
# MongoDB Configuration
# ===================================
# Replace with your MongoDB Atlas URI or local MongoDB connection string
# Format: mongodb+srv://<username>:<password>@<cluster-url>/<database-name>
spring.data.mongodb.uri=mongodb+srv://<your_username>:<your_password>@<your_cluster>.mongodb.net/<your_database_name>

# Alternative: For local MongoDB installation
# spring.data.mongodb.uri=mongodb://localhost:27017/<your_database_name>

# Database name (optional if included in URI)
# spring.data.mongodb.database=uberdb

# ===================================
# MongoDB Additional Settings
# ===================================
# Enable auto-index creation for MongoDB
spring.data.mongodb.auto-index-creation=true

# ===================================
# JWT Configuration
# ===================================
# Secret key for JWT token signing (CHANGE THIS TO YOUR OWN SECRET!)
# Generate a strong secret key: https://www.allkeysgenerator.com/Random/Security-Encryption-Key-Generator.aspx
jwt.secret=<your_jwt_secret_key_here_minimum_32_characters>

# JWT token expiration time in milliseconds (default: 24 hours = 86400000 ms)
jwt.expiration=86400000

# ===================================
# Logging Configuration (Optional)
# ===================================
# Uncomment to enable debug logging for development
# logging.level.org.springframework.security=DEBUG
# logging.level.org.springframework.data.mongodb=DEBUG

# ===================================
# Swagger/OpenAPI Configuration
# ===================================

# OpenAPI JSON endpoint path
springdoc.api-docs.path=/api-docs

# Swagger UI endpoint path
springdoc.swagger-ui.path=/swagger-ui.html

# Enable Swagger UI
springdoc.swagger-ui.enabled=true

# Sort operations by HTTP method (GET, POST, PUT, DELETE)
springdoc.swagger-ui.operations-sorter=method

# Sort tags alphabetically
springdoc.swagger-ui.tags-sorter=alpha

# Display all operations expanded by default
springdoc.swagger-ui.doc-expansion=none

# Show request duration in UI
springdoc.swagger-ui.display-request-duration=true

# ===================================
# API Group Configurations
# ===================================

# Group 1: Authentication APIs
springdoc.group-configs[0].group=auth
springdoc.group-configs[0].display-name=Authentication APIs
springdoc.group-configs[0].paths-to-match=/api/auth/**

# Group 2: Core Ride APIs
springdoc.group-configs[1].group=core-rides
springdoc.group-configs[1].display-name=Core Ride APIs
springdoc.group-configs[1].paths-to-match=/api/rides/**

# Group 3: Advanced Query APIs
springdoc.group-configs[2].group=queries
springdoc.group-configs[2].display-name=Advanced Query APIs
springdoc.group-configs[2].paths-to-match=/api/rides/search,/api/rides/filter-distance,/api/rides/filter-date-range,/api/rides/sort,/api/rides/user/**,/api/rides/driver/**,/api/rides/filter-status,/api/rides/advanced-search,/api/rides/date/**

# Group 4: Analytics APIs
springdoc.group-configs[3].group=analytics
springdoc.group-configs[3].display-name=Analytics APIs
springdoc.group-configs[3].paths-to-match=/api/analytics/**

# Group 5: Health Check APIs
springdoc.group-configs[4].group=health
springdoc.group-configs[4].display-name=Health Check APIs
springdoc.group-configs[4].paths-to-match=/api/health/**

# ===================================
# INSTRUCTIONS FOR SETUP:
# ===================================
# 1. Create a MongoDB Atlas account at: https://www.mongodb.com/cloud/atlas
# 2. Create a new cluster (free tier available)
# 3. Create a database user with username and password
# 4. Whitelist your IP address (or use 0.0.0.0/0 for development)
# 5. Get your connection string from Atlas and replace the placeholders above
# 6. Generate a strong JWT secret key (minimum 32 characters)
# 7. Save this file as 'application.properties' in src/main/resources/
# 8. Make sure this file is listed in .gitignore to keep your credentials safe!
#
# Example MongoDB URI:
# spring.data.mongodb.uri=mongodb+srv://myuser:mypassword123@cluster0.abc123.mongodb.net/uberdb
#
# Example JWT Secret (DO NOT USE THIS - GENERATE YOUR OWN):
# jwt.secret=mySecretKeyForJWTTokenGenerationAndValidation12345678
# ===================================

